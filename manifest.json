{
  "manifest_version": 3,
  "name": "Tab Timer Pro",
  "version": "3.6",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "scripting" 
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}