{
  "manifest_version": 3,
  "name": "Tab Timer",
  "version": "2.0",
  "description": "Track time spent on websites with smart reminders.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }




,
  "commands": {
  "open-tab-timer": {
    "suggested_key": {
      "default": "Ctrl+Shift+Y"
    },
    "description": "Open Tab Timer popup"
  }
  }
}

